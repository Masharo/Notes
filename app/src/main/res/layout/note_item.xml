<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_noteitem_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview_noteitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingVertical="20dp"
            android:paddingHorizontal="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_noteitem_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="@dimen/padding_noteitem_verticaltextview"
            android:paddingHorizontal="@dimen/padding_noteitem_horizontaltextview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_noteitem_title" />

        <TextView
            android:id="@+id/textview_noteitem_dayofweektitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:paddingVertical="@dimen/padding_noteitem_verticaltextview"
            android:paddingHorizontal="@dimen/padding_noteitem_horizontaltextview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/text_noteitem_dayofweek" />

        <TextView
            android:id="@+id/textview_noteitem_dayofweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingVertical="@dimen/padding_noteitem_verticaltextview"
            app:layout_constraintLeft_toRightOf="@id/textview_noteitem_dayofweektitle"
            app:layout_constraintTop_toBottomOf="@id/textview_noteitem_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>